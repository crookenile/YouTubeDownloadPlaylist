<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Playlist Downloader" Height="500" Width="800" Icon="/icon.ico"
        Background="#F5F7FA" FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Playlist URL -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Playlist URL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Border CornerRadius="6" Background="White" Padding="2" Margin="0,0,10,0">
                <TextBox x:Name="UrlBox" Width="500" BorderThickness="0"/>
            </Border>
        </StackPanel>

        <!-- Save Folder + Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Save to:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Border CornerRadius="6" Background="White" Padding="2" Margin="0,0,10,0">
                <TextBox x:Name="FolderBox" Width="350" IsReadOnly="True" BorderThickness="0"/>
            </Border>
            <Button Content="Browse..." Width="100" Margin="0,0,10,0"
                    Background="#E0E0E0" Foreground="Black" BorderThickness="0"
                    Padding="6,4"/>
            <Button Content="Download" Width="100"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    Padding="6,4" Click="Button_Click"/>
        </StackPanel>

        <!-- Downloads List -->
        <ListView x:Name="DownloadList" Grid.Row="2" BorderThickness="0" Background="White" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" Width="350" DisplayMemberBinding="{Binding FileName}"/>
                    <GridViewColumn Header="Progress" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Height="20"
                                             Foreground="#4CAF50" Background="#E0E0E0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="%" Width="50" DisplayMemberBinding="{Binding Progress}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Status -->
        <TextBlock x:Name="StatusText" Grid.Row="3" Text="Ready" 
                   FontWeight="Bold" Margin="0,10,0,0" Foreground="#333"/>
    </Grid>
</Window>
